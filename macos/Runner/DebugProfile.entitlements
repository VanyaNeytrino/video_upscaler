<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- ОТКЛЮЧАЕМ SANDBOXING для разработки -->
    <key>com.apple.security.app-sandbox</key>
    <false/>
    
    <!-- Разрешения на файлы -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>
    
    <!-- Доступ к домашней директории -->
    <key>com.apple.security.files.user-selected.read-only</key>
    <true/>
    
    <!-- Сетевые разрешения -->
    <key>com.apple.security.network.client</key>
    <true/>
    <key>com.apple.security.network.server</key>
    <true/>
    
    <!-- JIT для Dart -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    
    <!-- КЛЮЧЕВОЕ: разрешение на выполнение загруженного кода -->
    <key>com.apple.security.cs.disable-executable-page-protection</key>
    <true/>
    
    <!-- Разрешение на выполнение внешних процессов -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    
    <!-- Отключение library validation для загруженных библиотек -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
</dict>
</plist>
